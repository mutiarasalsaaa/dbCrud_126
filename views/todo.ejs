<div class="container mt-5">
    <h1 class="text-center">Todo List</h1>

    <!-- Button to Add New Todo -->
    <button class="btn btn-primary my-4 d-block mx-auto" id="addTodoBtn">Add Todo</button>

    <!-- Grid of Todos -->
    <div id="todoList" class="row">
        <% todos.forEach(todo => { %>
            <div class="col-md-4 mb-4">
                <div class="card todo-card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Todo</h5>
                        <p class="card-text"><%= todo.task %></p>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-sm btn-success editBtn" data-id="<%= todo.id %>">Edit</button>
                            <button class="btn btn-sm btn-danger deleteBtn" data-id="<%= todo.id %>">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Footer -->
    <footer class="text-center py-3 mt-5">
        Â© Copyright 2024 muti.
    </footer>

    <!-- Add/Edit Todo Modal -->
    <div id="todoModal" class="modal fade" tabindex="-1" aria-labelledby="todoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="todoModalLabel">Add/Edit Todo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="todoForm">
                        <div class="form-group">
                            <label for="todoTask">Task</label>
                            <input type="text" id="todoTask" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* General styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #ffe6f2; /* Latar belakang pink lembut */
    }

    .todo-card {
        border: 1px solid #ff80bf; /* Border warna pink terang */
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .todo-card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 15px rgba(255, 128, 191, 0.2); /* Bayangan pink */
    }

    #addTodoBtn {
        background-color: #ff4da6; /* Tombol tambah pink */
        border-color: #ff4da6;
        color: white;
    }

    #addTodoBtn:hover {
        background-color: #e63995; /* Hover tombol tambah */
        border-color: #e63995;
    }

    .btn-success {
        background-color: #ff80bf; /* Tombol hijau diganti pink muda */
        border-color: #ff80bf;
        color: white;
    }

    .btn-success:hover {
        background-color: #ff66b2; /* Hover tombol hijau diganti pink yang lebih gelap */
        border-color: #ff66b2;
    }

    .btn-danger {
        background-color: #ff4da6; /* Tombol merah diganti pink cerah */
        border-color: #ff4da6;
        color: white;
    }

    .btn-danger:hover {
        background-color: #e63995; /* Hover tombol merah menjadi lebih gelap */
        border-color: #e63995;
    }

    .modal-header {
        background-color: #ff4da6; /* Header modal warna pink */
        color: white;
    }

    .modal-content .btn-primary {
        background-color: #ff4da6; /* Tombol simpan dalam modal */
        border-color: #ff4da6;
        color: white;
    }

    .modal-content .btn-primary:hover {
        background-color: #e63995;
        border-color: #e63995;
    }

    footer {
        background-color: #ff80bf; /* Footer warna pink terang */
        color: #ffffff;
    }

    footer a {
        color: #ffffff; /* Link di footer tetap putih */
    }
</style>
